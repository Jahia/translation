<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean class="org.jahia.services.translation.MicrosoftTranslationProvider" factory-method="getInstance" init-method="start">
        <property name="name" value="Microsoft Translator" />
        <property name="translationService" ref="TranslationService" />
        <property name="httpClientService" ref="HttpClientService" />
    </bean>

</beans>